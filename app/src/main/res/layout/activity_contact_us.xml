<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3"
    tools:context="com.harsha.trucker.ContactUsActivity">


    <android.support.v7.widget.CardView
        android:id="@+id/cardview2"
        android:layout_width="0dp"
        android:layout_height="198dp"
        android:layout_marginBottom="232dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/phone_us"
                android:layout_width="134dp"
                android:layout_height="28dp"
                android:layout_marginBottom="120dp"
                android:layout_marginStart="96dp"
                android:text="8792111296"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton
                android:id="@+id/contact_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="140dp"
                android:background="@drawable/download"
                android:elevation="8dp"
                android:src="@drawable/call_icon"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/phone_us"
                app:layout_constraintEnd_toEndOf="@+id/phone_us"
                app:layout_constraintTop_toTopOf="@+id/phone_us" />

            <TextView
                android:id="@+id/email_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp"
                android:layout_marginStart="96dp"
                android:layout_marginTop="16dp"
                android:onClick="email"
                android:text="ssmelmuri@gmail.com"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phone_us" />

            <ImageButton
                android:id="@+id/email_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="212dp"
                android:background="@drawable/download"
                android:elevation="8dp"
                android:onClick="email"
                android:src="@drawable/email"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/email_us"
                app:layout_constraintEnd_toEndOf="@+id/email_us"
                app:layout_constraintTop_toTopOf="@+id/email_us" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <include layout="@layout/navigation_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>


</android.support.constraint.ConstraintLayout>
