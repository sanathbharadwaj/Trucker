<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:context="trucker.harsha.com.trucker.MapsActivity" />

    <TextView
        android:id="@+id/address_bar_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/map"
        android:layout_centerHorizontal="true"
        android:text="TextView" />

    <Button
        android:id="@+id/book_now_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="bookNow"
        android:text="Book Now"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/address_bar_textview"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="9dp"
        android:layout_marginEnd="9dp" />

    <Button
        android:id="@+id/rate_card_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showRateCard"
        android:text="Rate Card"
        android:layout_above="@+id/recenter_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/recenter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_now_button"
        android:layout_centerHorizontal="true"
        android:onClick="gpsRecenter"
        android:text="Recenter" />


</RelativeLayout>